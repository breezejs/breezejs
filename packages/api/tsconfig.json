{
  "awesomeTypescriptLoaderOptions": {
    "useWebpackText": true
  },
  "compilerOptions": {
    "baseUrl": "./src",
    "declaration": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "lib": [
      "es2017"
    ],
    "module": "commonjs",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "noLib": false,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "removeComments": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "suppressImplicitAnyIndexErrors": false,
    "target": "es6",
    "types": [
      "node"
    ]
  },
  "exclude": [
    "node_modules",
    "**/*.e2e-spec.ts",
    "**/*.spec.ts"
  ]
}
