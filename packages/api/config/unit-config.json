{
  "collectCoverageFrom" : [
    "packages/api/src/**/*.ts",
    "!**/node_modules/**"
  ],
  "coverageDirectory": "reports",
  "coverageReporters": [
    "json",
    "lcov"
  ],
  "globals": {
    "ts-jest": {
      "tsConfigFile": "packages/api/tsconfig.json"
    }
  },
  "moduleDirectories": [
    "../../node_modules",
    "../src"
  ],
  "moduleFileExtensions": [
    "js",
    "json",
    "ts"
  ],
  "rootDir": "../",
  "testEnvironment": "node",
  "testRegex": "/src/.*\\.spec.ts$",
  "transform": {
    "^.+\\.tsx?$": "../../node_modules/ts-jest/preprocessor.js"
  }
}
