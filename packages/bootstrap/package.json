{
  "name": "@breezejs/bootstrap",
  "version": "0.0.0",
  "description": "Breeze application bootstrapper",
  "author": "Mo Gusbi <me@mogusbi.co.uk>",
  "homepage": "https://github.com/breezejs/breezejs",
  "license": "MIT",
  "main": "lib/index.js",
  "typings": "lib/index.d.ts",
  "directories": {
    "lib": "lib"
  },
  "files": [
    "lib"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/breezejs/breezejs.git"
  },
  "scripts": {
    "build": "tsc",
    "docs": "typedoc --options ../../typedoc.js --out ./docs ./src",
    "lint": "tslint -c ../../tslint.json -p tsconfig.json",
    "test": "jest --coverage",
    "posttest": "codecov"
  },
  "jest": {
    "collectCoverageFrom": [
      "**/src/**/*.ts",
      "!**/src/*.module.ts"
    ],
    "coveragePathIgnorePatterns": [
      "index.ts",
      "/node_modules/"
    ],
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testMatch": [
      "**/+(*.)+(spec|test).+(ts|js)?(x)"
    ],
    "moduleFileExtensions": [
      "ts",
      "js",
      "json",
      "node"
    ],
    "modulePathIgnorePatterns": [
      "<rootDir>/.*/__mocks__"
    ]
  },
  "dependencies": {
    "morgan": "^1.9.1"
  },
  "devDependencies": {
    "@types/morgan": "^1.7.35"
  }
}
