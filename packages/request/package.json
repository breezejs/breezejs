{
  "name": "@breeze/request",
  "version": "0.0.0",
  "description": "Breeze request module",
  "author": "Mo Gusbi <me@mogusbi.co.uk>",
  "homepage": "https://github.com/mogusbi/breeze",
  "license": "MIT",
  "main": "lib/index.js",
  "typings": "lib/index.d.ts",
  "directories": {
    "lib": "lib"
  },
  "files": [
    "lib"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/mogusbi/breeze.git"
  },
  "scripts": {
    "build": "tsc",
    "docs": "typedoc --exclude \"**/*+(index|spec).ts\" --out ./docs --mode modules ./src",
    "lint": "tslint -c ../../tslint.json -p tsconfig.json",
    "test": "jest --coverage --coverageReporters=text-lcov | coveralls"
  },
  "jest": {
    "collectCoverageFrom": [
      "**/src/**/*.ts",
      "!**/src/**/*.decorator.ts",
      "!**/src/**/*.model.ts",
      "!**/src/**/*.module.ts"
    ],
    "coveragePathIgnorePatterns": [
      "index.ts",
      "/node_modules/"
    ],
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testMatch": [
      "**/+(*.)+(spec|test).+(ts|js)?(x)"
    ],
    "moduleFileExtensions": [
      "ts",
      "js",
      "json",
      "node"
    ]
  }
}
