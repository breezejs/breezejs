{
  "name": "@breezejs/dynamo-db",
  "version": "0.0.0",
  "description": "Breeze Dynamo DB adaptor",
  "author": "Mo Gusbi <me@mogusbi.co.uk>",
  "homepage": "https://github.com/breezejs/breezejs",
  "license": "MIT",
  "main": "lib/index.js",
  "typings": "lib/index.d.ts",
  "directories": {
    "lib": "lib"
  },
  "files": [
    "lib"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/breezejs/breezejs.git"
  },
  "scripts": {
    "build": "tsc",
    "docs": "typedoc --options ../../typedoc.js --out ./docs ./src",
    "e2e": "jest --config=e2e/jest.config.js --runInBand",
    "lint": "tslint -c ../../tslint.json -p tsconfig.json",
    "test": "jest --coverage --passWithNoTests",
    "posttest": "codecov"
  },
  "dependencies": {
    "@aws/dynamodb-data-mapper": "^0.7.3",
    "@aws/dynamodb-data-mapper-annotations": "^0.7.3",
    "@aws/dynamodb-data-marshaller": "^0.7.3",
    "aws-sdk": "^2.355.0",
    "uuid": "^3.3.2"
  },
  "devDependencies": {
    "@types/uuid": "^3.4.4"
  },
  "jest": {
    "collectCoverageFrom": [
      "**/src/**/*.ts",
      "!**/src/*.module.ts"
    ],
    "coveragePathIgnorePatterns": [
      "index.ts",
      "/node_modules/"
    ],
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testMatch": [
      "**/+(*.)+(spec|test).+(ts|js)?(x)"
    ],
    "moduleFileExtensions": [
      "ts",
      "js",
      "json",
      "node"
    ],
    "modulePathIgnorePatterns": [
      "<rootDir>/.*/__mocks__"
    ]
  }
}
