{
  "name": "breeze-bb",
  "version": "1.0.0",
  "private": true,
  "description": "NodeJS powered bulletin board",
  "scripts": {
    "api:e2e": "jest --config=packages/api/config/e2e-config.json --forceExit",
    "api:e2e:watch": "jest --config=packages/api/config/e2e-config.json --watch",
    "api:environment": "docker-compose -f environments/development.yml up",
    "api:start": "nodemon --exec ts-node packages/api/src/main.ts",
    "api:lint": "tslint -c tslint.json --project packages/api/tsconfig.json 'packages/api/src/**/*.ts'",
    "api:test": "jest --config=packages/api/config/unit-config.json",
    "api:test:coverage": "jest --config=packages/api/config/unit-config.json --coverage",
    "api:test:watch": "jest --config=packages/api/config/unit-config.json --watch"
  },
  "author": "Mo Gusbi <me@mogusbi.co.uk>",
  "repository": {
    "type": "git",
    "url": "https://bitbucket.org/mogusbi/breeze-bb.git"
  },
  "license": "UNLICENSED",
  "dependencies": {
    "@nestjs/common": "^4.5.8",
    "@nestjs/core": "^4.5.8",
    "@nestjs/mongoose": "^2.0.0",
    "@nestjs/swagger": "^1.1.3",
    "body-parser": "^1.18.2",
    "class-transformer": "^0.1.8",
    "class-validator": "^0.7.3",
    "mongoose": "^4.13.9",
    "mongoose-paginate": "^5.0.3",
    "morgan": "^1.9.0",
    "reflect-metadata": "^0.1.10",
    "rxjs": "^5.5.6"
  },
  "devDependencies": {
    "@nestjs/testing": "^4.5.5",
    "@types/body-parser": "^1.16.8",
    "@types/express": "^4.11.0",
    "@types/jest": "^22.0.1",
    "@types/mongoose": "^4.7.32",
    "@types/mongoose-paginate": "^5.0.6",
    "@types/morgan": "^1.7.35",
    "@types/node": "^8.5.8",
    "jest": "^22.0.6",
    "nodemon": "^1.14.11",
    "ts-jest": "^22.0.1",
    "ts-node": "^4.1.0",
    "tslint": "^5.9.1",
    "tslint-eslint-rules": "^4.1.1",
    "tslint-microsoft-contrib": "^5.0.1",
    "typescript": "^2.6.2"
  }
}
